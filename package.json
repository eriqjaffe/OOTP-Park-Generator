{
  "name": "parkgen",
  "version": "0.1.1",
  "description": "OOTP Park Generator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/OOTP-Park-Generator"
  },
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.0",
    "electron-build": "^0.0.3",
    "express": "^4.17.1",
    "jimp": "^0.16.1",
    "sql.js": "^1.6.2",
    "xml-escape": "^1.1.0",
    "xmlbuilder2": "^3.0.2"
  },
  "packageManager": "yarn@3.1.0",
  "build": {
    "appId": "com.ootputilities.parkgen",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName}_${version}_setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "OOTP Park Generator",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {}
  },
  "devDependencies": {
    "electron": "^16.0.0",
    "electron-builder": "^22.14.5"
  }
}
