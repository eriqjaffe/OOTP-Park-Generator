{
  "name": "parkgen",
  "productName": "OOTP Park Generator",
  "version": "0.1.2",
  "description": "OOTP Park Generator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/OOTP-Park-Generator"
  },
  "license": "ISC",
  "dependencies": {
    "add-filename-increment": "^1.0.0",
    "adm-zip": "^0.5.10",
    "archiver": "^5.3.0",
    "electron-store": "^8.1.0",
    "jimp": "^0.16.1",
    "sql.js": "^1.6.2"
  },
  "packageManager": "yarn@3.1.0",
  "build": {
    "appId": "com.ootputilities.parkgen",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName} ${version} setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh",
      "uninstallDisplayName": "${productName} ${version}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "differentialPackage": false
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ]
    },
    "deb": {}
  },
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1"
  }
}
